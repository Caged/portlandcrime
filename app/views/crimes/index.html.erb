<section id="main">
  <div class="box" id="map">
    <header>
      <h1>Crime Map</h1>
      <%= link_to 'Locate', nil, :class => 'locate' %>
    </header>
  </div>
  
  <section class="box">
    <header>
      <h1>Crime Pulse</h1>
    </header>
    <div id="history"></div>
  </section>
</section>

<aside id="sbar" class="box">
  <header><h1>Crime Types</h1></header>
  <ul class="offenses">
    <% @offenses.each do |group, offs| %>
    <% permalink = group[:name].parameterize %>
      <li class="otype <%= permalink %>">
        <span class="otype">
          <span class="check group" data-code="<%= permalink[0..1] %>">3</span>
          <%= link_to group[:name], :anchor => permalink, :class => "otype #{permalink[0..1]}" %>
          <span class="exp">9</span>
        </span>
        <ul class="offenses">
          <% offs.each do |off| %>
          <li>
            <span class="check group <%= off.code %>" data-code="<%= off.code %>">3</span>
            <%= link_to off.name, :anchor => off.permalink %>
            <span class="code">(<%= off.code %>)</span>
          </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</aside>